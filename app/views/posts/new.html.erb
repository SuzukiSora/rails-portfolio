<div id="u_post" class="text-center">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2>投稿</h2>
      <%= form_with model: @post, local: true do |f| %>

        <div class="field">
          <%= f.label :title, "映画のタイトル", class: "title_label" %><br />
          <%= f.text_field :title, class: 'p_title' %><br>
        </div>

        <div class="field">
          <%= f.label :cast, "キャスト", class: "cast_label" %><br />
          <%= f.text_area :cast, class: 'p_cast' %><br>
        </div>

        <div class="field">
          <%= f.label :year, "公開年度", class: "year_label" %><br />
          <%= f.text_field :year, class: 'p_year' %><br>
        </div>

        <div class="field">
          <%= f.label :summary, "見所・あらすじ", class: "summary_label" %><br />
          <%= f.text_area :summary, class: 'p_summary' %><br>
        </div>

        <div class="field">
          <%= f.file_field :image %><br>
        </div>

        <div class="action">
          <%= f.submit "投稿" , class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>