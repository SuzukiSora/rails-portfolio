<div id="log_new" class="text-center">
  <h2>ログイン</h2>

  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %> 

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-controll" %>
        </div>

        <div class="field">
           <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-controll" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログイン状態を保持" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン" , class: "btn btn-primary" %>
        </div>

      <% end %>

      <div class="actions">
        <%= link_to "新規登録の方はこちら", new_user_registration_path %>
      </div>


    </div>
  </div>
</div>

