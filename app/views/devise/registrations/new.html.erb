<div id="sign_new" class="text-center">
  <h2>新規登録</h2>

  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %> 

        <div class="form-group">
          <%= f.label :name, "名前" %><br/>
          <%= f.text_field :name, autofocus: true, class:'form-controll'  %>
        </div>

        <div class="form-group">
          <%= f.label :age, "年齢" %><br/>
          <%= f.number_field :age, class:'form-controll' %>
        </div>

        <div class="form-group">
          <%= f.label :email, "メールアドレス" %><br/>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-controll' %>
        </div>

        <div class="form-group">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上で入力)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:'form-controll' %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "パスワードの確認" %><br/>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-controll' %>
        </div>

        <div class="actions">
          <%= f.submit "登録する！", class: " btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

